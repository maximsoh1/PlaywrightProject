<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
	<!-- NUnit adapter -->
	<NUnit>
		<NumberOfTestWorkers>24</NumberOfTestWorkers> <!-- for debugging -->
	</NUnit>
	<!-- General run configuration -->
	<RunConfiguration>
		<EnvironmentVariables>
			<!-- For debugging selectors, it's recommend to set the following environment variable -->
			<DEBUG>pw:api</DEBUG>
			<!--<PWDEBUG>1</PWDEBUG> --><!-- опционально: откроет debug UI -->
			<!-- Allure Report -->
			<ALLURE_RESULTS_DIRECTORY>allure-results</ALLURE_RESULTS_DIRECTORY>
		</EnvironmentVariables>
	</RunConfiguration>
	<!-- Playwright -->
	<Playwright>
		<BrowserName>chromium</BrowserName>
		<ExpectTimeout>5000</ExpectTimeout>
		<LaunchOptions>
			<Headless>false</Headless>
			<Channel>msedge</Channel>
		</LaunchOptions>
	</Playwright>
</RunSettings>